@model DentalCenter.Models.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="contact-img edit-serivce"></div>
    <div class="container">
        <h1 class="title">Редактировать услугу</h1>

        <div class="card-view">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ServiceId" />
                    <input type="hidden" asp-for="Doctors" value="@Model.ServiceId" />
                    <div class="form-group">
                        <label asp-for="ServiceName" class="control-label"></label>
                        <input asp-for="ServiceName" class="form-control" />
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServiceDecription" class="control-label"></label>
                        <input asp-for="ServiceDecription" class="form-control" />
                        <span asp-validation-for="ServiceDecription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServicePrice" class="control-label"></label>
                        <input asp-for="ServicePrice" class="form-control" />
                        <span asp-validation-for="ServicePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group btn-edit">
                        <input type="submit" value="Сохрахнить" class="btn btn-primary" />
                        <a  class="btn btn-primary" asp-action="Index">Назад</a>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

    </div>
</main>

