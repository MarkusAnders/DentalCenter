@model IEnumerable<DentalCenter.Models.Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="container">

        <h1 class="service-title title">Услуги Dentalist.</h1>

        @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceDecription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServicePrice)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceDecription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServicePrice)
                        </td>
                        @if (User.IsInRole("admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ServiceId">Редактировать</a> |
                                <a asp-action="Details" asp-route-id="@item.ServiceId">Информация</a> |
                                <a asp-action="Delete" asp-route-id="@item.ServiceId">Удалить</a>
                            </td>
                        }

                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-controller="MakeAppoinments" asp-action="SelectService" >Записаться на прием</a>
    </div>
</main>
