@model DentalCenter.Models.Service

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="contact-img card-service"></div>
    <div class="container">

        <h1 class="title">Информация услуги</h1>
        <div class="card-view">
            <div class="">
                <dl>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ServiceName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ServiceName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ServiceDecription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ServiceDecription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ServicePrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ServicePrice)
                    </dd>
                </dl>
            </div>
            <div>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ServiceId">Редактировать</a>
                <a class="btn btn-primary" asp-action="Index">Назад</a>
            </div>
        </div>
    </div>
</main>
