@model DentalCenter.Models.Service

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="contact-img edit-serivce"></div>
    <div class="container">
        <h1 class="service-title title">Создать услугу</h1>
        <div class="card-view">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ServiceName" class="control-label"></label>
                        <input asp-for="ServiceName" class="form-control" />
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServiceDecription" class="control-label"></label>
                        <input asp-for="ServiceDecription" class="form-control" />
                        <span asp-validation-for="ServiceDecription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServicePrice" class="control-label"></label>
                        <input asp-for="ServicePrice" class="form-control" />
                        <span asp-validation-for="ServicePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group btn-edit">
                        <input type="submit" value="Далее"  class="btn btn-primary btn-create create" />
                    </div>
                </form>
            </div>
        </div>

        @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</main>


