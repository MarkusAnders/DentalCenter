@model IEnumerable<DentalCenter.Models.Doctor>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="container">
        <h1 class="doctor-title title">Врачи Dentalist.</h1>
        <h3 class="doctor-subtitle subtitle">
            Команда профессионалов ежегодно проходит обучение и повышает уровень квалификации. Мы используем последние технологии и самое современное оборудование
        </h3>

        @*<p>
        <a asp-action="Create">Create New</a>
        </p>*@
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorPatronymic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorSpecialization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorCabinet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorPhoto)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorSurname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorPatronymic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorSpecialization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorCabinet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorPhoto)
                        </td>
                        @if (User.IsInRole("admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DoctorId">Редактировать</a> |
                                <a asp-action="Details" asp-route-id="@item.DoctorId">Информация</a> |
                                <a asp-action="Delete" asp-route-id="@item.DoctorId">Удалить</a>
                            </td>
                        }
                        else
                        {
                            <td>
                                <a asp-action="Details" asp-route-id="@item.DoctorId">Информация</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
