@model DentalCenter.Models.Doctor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="container">
        <h1>Details</h1>

        <div>
            <h4>Doctor</h4>
            <hr />

            @if (ViewBag.Photodata != null)
            {
                <img class="mt-4 mb-4" width="600" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Photodata))">
            }

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorSurname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorSurname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorPatronymic)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorPatronymic)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorSpecialization)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorSpecialization)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorCabinet)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorCabinet)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorPhoto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorPhoto)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.DoctorId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>

    </div>
</main>