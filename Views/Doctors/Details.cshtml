@model DentalCenter.Models.Doctor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pb-3">
    <div class="contact-img card-doctor"></div>
    <div class="container">
        <h1 class="title">Информация доктора</h1>

        <div class="card-view">
            <div class="card-view-info">
                <dl class="card-string">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DoctorSurname)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.DoctorSurname)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DoctorName)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.DoctorName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DoctorPatronymic)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.DoctorPatronymic)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DoctorSpecialization)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.DoctorSpecialization)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DoctorCabinet)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.DoctorCabinet)
                    </dd>
                    @*<dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorPhoto)
                    </dt>
                    <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorPhoto)
                    </dd>*@

                </dl>
                @if (ViewBag.Photodata != null)
                {
                    <img class="mt-4 mb-4" width="300" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Photodata))">
                }
            </div>
            <div class="card-view-btn">
                @if (User.IsInRole("admin"))
                {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.DoctorId">Редактировать</a>
                }
                <a class="btn btn-primary" asp-action="Index">Назад</a>
            </div>
        </div>
        

    </div>
</main>